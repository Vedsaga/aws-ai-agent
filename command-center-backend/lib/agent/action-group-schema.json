{
  "openapi": "3.0.0",
  "info": {
    "title": "Database Query Tool API",
    "version": "1.0.0",
    "description": "API for querying the disaster response simulation database"
  },
  "paths": {
    "/query": {
      "post": {
        "summary": "Query simulation database for events",
        "description": "Retrieve events from the simulation database based on various filters including domain, severity, time range, and location",
        "operationId": "queryDatabase",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "domain": {
                    "type": "string",
                    "enum": ["MEDICAL", "FIRE", "STRUCTURAL", "LOGISTICS", "COMMUNICATION"],
                    "description": "Filter events by domain type"
                  },
                  "severity": {
                    "type": "string",
                    "enum": ["CRITICAL", "HIGH", "MEDIUM", "LOW"],
                    "description": "Filter events by severity level"
                  },
                  "startTime": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Start of time range (ISO 8601 format)"
                  },
                  "endTime": {
                    "type": "string",
                    "format": "date-time",
                    "description": "End of time range (ISO 8601 format)"
                  },
                  "location": {
                    "type": "object",
                    "properties": {
                      "lat": {
                        "type": "number",
                        "description": "Latitude coordinate"
                      },
                      "lon": {
                        "type": "number",
                        "description": "Longitude coordinate"
                      },
                      "radiusKm": {
                        "type": "number",
                        "description": "Search radius in kilometers"
                      }
                    },
                    "description": "Filter events by geographic location"
                  },
                  "limit": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 100,
                    "default": 50,
                    "description": "Maximum number of events to return"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful query response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "events": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "eventId": {
                            "type": "string",
                            "description": "Unique event identifier"
                          },
                          "timestamp": {
                            "type": "string",
                            "format": "date-time",
                            "description": "Event timestamp"
                          },
                          "domain": {
                            "type": "string",
                            "description": "Event domain"
                          },
                          "severity": {
                            "type": "string",
                            "description": "Event severity"
                          },
                          "geojson": {
                            "type": "string",
                            "description": "GeoJSON geometry as string"
                          },
                          "summary": {
                            "type": "string",
                            "description": "Brief event description"
                          },
                          "details": {
                            "type": "string",
                            "description": "Detailed event information"
                          },
                          "resourcesNeeded": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            },
                            "description": "List of required resources"
                          },
                          "contactInfo": {
                            "type": "string",
                            "description": "Contact information"
                          }
                        }
                      }
                    },
                    "count": {
                      "type": "integer",
                      "description": "Number of events returned"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
