{
  "name": "command-center-backend",
  "version": "1.0.0",
  "description": "Command Center Backend API with AWS CDK",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "cdk": "cdk",
    "bundle": "./scripts/prepare-lambda-bundle.sh",
    "deploy": "./scripts/prepare-lambda-bundle.sh && cdk deploy",
    "deploy:quick": "cdk deploy",
    "destroy": "cdk destroy",
    "synth": "cdk synth",
    "diff": "cdk diff",
    "generate-data": "ts-node scripts/generate-simulation-data.ts",
    "populate-db": "ts-node scripts/populate-database.ts",
    "test": "./test/run-tests.sh",
    "test:unit": "ts-node test/unit.test.ts",
    "test:e2e": "./test/run-tests.sh --e2e",
    "test:integration": "./scripts/run-integration-tests.sh",
    "test:api": "./scripts/test-api.sh",
    "test:quick": "./scripts/quick-test.sh"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.155",
    "@types/axios": "^0.9.36",
    "@types/node": "^20.10.0",
    "aws-cdk": "^2.110.0",
    "axios": "^1.12.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-agent-runtime": "^3.910.0",
    "@aws-sdk/client-dynamodb": "^3.910.0",
    "@aws-sdk/lib-dynamodb": "^3.910.0",
    "aws-cdk-lib": "^2.110.0",
    "constructs": "^10.3.0",
    "source-map-support": "^0.5.21",
    "zod": "^4.1.12"
  }
}
